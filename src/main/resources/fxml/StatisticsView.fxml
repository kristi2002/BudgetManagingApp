<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.ScatterChart?>
<?import javafx.scene.control.Slider?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/16"
      fx:controller="it.unicam.cs.mpgc.jbudget120002.controller.StatisticsController"
      VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <!-- Time Period Selection -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Period:"/>
        <ComboBox fx:id="cbPeriodType" promptText="Select Period" style="-fx-background-color: white; -fx-border-color: #ddd;"/>
        <DatePicker fx:id="dpStartDate" promptText="Start Date" style="-fx-background-color: white; -fx-border-color: #ddd;"/>
        <DatePicker fx:id="dpEndDate" promptText="End Date" style="-fx-background-color: white; -fx-border-color: #ddd;"/>
        <ComboBox fx:id="cbComparisonPeriod" promptText="Compare With" style="-fx-background-color: white; -fx-border-color: #ddd;"/>
        <Button text="Update" onAction="#handleUpdateStatistics" 
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 5 10;"/>
    </HBox>
    
    <!-- Category Filters -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Categories:"/>
        <ComboBox fx:id="cbMainCategory" promptText="Main Category" style="-fx-background-color: white; -fx-border-color: #ddd;"/>
        <CheckBox fx:id="chkIncludeSubcategories" text="Include Subcategories" style="-fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <ToggleButton fx:id="btnShowChart" text="Show Chart" 
                     style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        <ComboBox fx:id="cbChartType" promptText="Chart Type" style="-fx-background-color: white; -fx-border-color: #ddd;"/>
    </HBox>
    
    <!-- Statistics Summary -->
    <GridPane hgap="20" vgap="10" style="-fx-padding: 10; -fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150"/>
        </columnConstraints>
        
        <!-- Current Period -->
        <VBox spacing="5" GridPane.columnIndex="0" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 3; -fx-background-radius: 3;">
            <Label text="Current Period" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="lblCurrentIncome" text="Income: €0.00"/>
            <Label fx:id="lblCurrentExpenses" text="Expenses: €0.00"/>
            <Label fx:id="lblCurrentBalance" text="Balance: €0.00"/>
            <Label fx:id="lblCurrentSavings" text="Savings Rate: 0%"/>
        </VBox>
        
        <!-- Comparison Period -->
        <VBox spacing="5" GridPane.columnIndex="1" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 3; -fx-background-radius: 3;">
            <Label text="Comparison Period" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="lblCompIncome" text="Income: €0.00"/>
            <Label fx:id="lblCompExpenses" text="Expenses: €0.00"/>
            <Label fx:id="lblCompBalance" text="Balance: €0.00"/>
            <Label fx:id="lblCompSavings" text="Savings Rate: 0%"/>
        </VBox>
        
        <!-- Difference -->
        <VBox spacing="5" GridPane.columnIndex="2" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 3; -fx-background-radius: 3;">
            <Label text="Difference" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="lblDiffIncome" text="Income: €0.00"/>
            <Label fx:id="lblDiffExpenses" text="Expenses: €0.00"/>
            <Label fx:id="lblDiffBalance" text="Balance: €0.00"/>
            <Label fx:id="lblDiffSavings" text="Savings Rate: 0%"/>
        </VBox>
    </GridPane>
    
    <!-- Chart/Table Container -->
    <StackPane VBox.vgrow="ALWAYS">
        <!-- Analysis Tabs -->
        <TabPane fx:id="analysisTabs">
            <Tab fx:id="tabTrends" text="Trends" closable="false">
                <VBox spacing="10">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Analysis Interval:"/>
                        <ComboBox fx:id="cbAnalysisInterval" prefWidth="150"/>
                    </HBox>
                    <LineChart fx:id="trendChart" VBox.vgrow="ALWAYS">
                        <xAxis><CategoryAxis label="Time"/></xAxis>
                        <yAxis><NumberAxis label="Amount"/></yAxis>
                    </LineChart>
                </VBox>
            </Tab>
            
            <Tab fx:id="tabPatterns" text="Patterns" closable="false">
                <VBox spacing="10">
                    <BarChart fx:id="patternChart" VBox.vgrow="ALWAYS">
                        <xAxis><CategoryAxis label="Category"/></xAxis>
                        <yAxis><NumberAxis label="Amount"/></yAxis>
                    </BarChart>
                </VBox>
            </Tab>
            
            <Tab fx:id="tabForecast" text="Forecast" closable="false">
                <VBox spacing="10">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Forecast Method:"/>
                        <ComboBox fx:id="cbForecastMethod" prefWidth="200"/>
                        <Label text="Confidence Level:"/>
                        <Slider fx:id="sldConfidenceLevel" prefWidth="200"/>
                    </HBox>
                    <ScatterChart fx:id="forecastChart" VBox.vgrow="ALWAYS">
                        <xAxis><CategoryAxis label="Time"/></xAxis>
                        <yAxis><NumberAxis label="Amount"/></yAxis>
                    </ScatterChart>
                </VBox>
            </Tab>
            
            <Tab fx:id="tabAnomalies" text="Anomalies" closable="false">
                <VBox spacing="10">
                    <TableView fx:id="tableAnomalies" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colTimestamp" text="Timestamp"/>
                            <TableColumn fx:id="colAnomalyCategory" text="Category"/>
                            <TableColumn fx:id="colAmount" text="Amount"/>
                            <TableColumn fx:id="colExpected" text="Expected"/>
                            <TableColumn fx:id="colDeviation" text="Deviation"/>
                            <TableColumn fx:id="colType" text="Type"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            
            <Tab fx:id="tabMonthlySummary" text="Monthly Summary" closable="false">
                <VBox spacing="10">
                    <TableView fx:id="tableMonthlySummary" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colMonth" text="Month"/>
                            <TableColumn fx:id="colIncome" text="Income"/>
                            <TableColumn fx:id="colExpenses" text="Expenses"/>
                            <TableColumn fx:id="colBalance" text="Balance"/>
                            <TableColumn fx:id="colSavings" text="Savings"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            
            <Tab fx:id="tabCategoryAnalysis" text="Category Analysis" closable="false">
                <VBox spacing="10">
                    <TableView fx:id="tableCategoryAnalysis" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colCategoryName" text="Category"/>
                            <TableColumn fx:id="colCurrentAmount" text="Current Amount"/>
                            <TableColumn fx:id="colPreviousAmount" text="Previous Amount"/>
                            <TableColumn fx:id="colDifference" text="Difference"/>
                            <TableColumn fx:id="colPercentage" text="Percentage"/>
                            <TableColumn fx:id="colCategoryAmount" text="Amount"/>
                            <TableColumn fx:id="colCategoryChange" text="Change"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            
            <Tab fx:id="tabBudgetTracking" text="Budget Tracking" closable="false">
                <VBox spacing="10">
                    <TableView fx:id="tableBudgetTracking" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colBudgetCategory" text="Category"/>
                            <TableColumn fx:id="colBudgetAmount" text="Budgeted"/>
                            <TableColumn fx:id="colActualAmount" text="Actual"/>
                            <TableColumn fx:id="colUtilization" text="Utilization"/>
                            <TableColumn fx:id="colVariance" text="Variance"/>
                            <TableColumn fx:id="colProgress" text="Progress"/>
                            <TableColumn fx:id="colStatus" text="Status"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </StackPane>
    
    <!-- Export Options -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnExportPDF" text="Export PDF" onAction="#handleExportPDF"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 5 10;"/>
        <Button fx:id="btnExportExcel" text="Export Excel" onAction="#handleExportExcel"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 5 10;"/>
    </HBox>
</VBox>
