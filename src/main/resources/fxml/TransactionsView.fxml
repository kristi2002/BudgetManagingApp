<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unicam.cs.mpgc.jbudget120002.controller.TransactionsController"
            AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
    <VBox spacing="10" AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <HBox spacing="5" alignment="CENTER_LEFT" VBox.vgrow="NEVER">
            <DatePicker fx:id="dpDate"/>
            <TextField fx:id="tfDesc" promptText="Description" HBox.hgrow="ALWAYS"/>
            <TextField fx:id="tfAmount" promptText="Amount" prefWidth="100"/>
            <CheckBox fx:id="cbIncome" text="Income"/>
            <ComboBox fx:id="cbTags" promptText="Click to add tags"/>
            <Button text="Add Transaction" onAction="#handleAddTransaction"/>
            <Button text="Delete Transaction" onAction="#handleDeleteTransaction"/>
        </HBox>
        <VBox spacing="5" VBox.vgrow="NEVER">
            <Label text="Selected Tags:" style="-fx-font-weight: bold;"/>
            <FlowPane fx:id="flowSelectedTags" hgap="5" vgap="5"/>
        </VBox>
        <TableView fx:id="table" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colDate" text="Date" prefWidth="100"/>
                <TableColumn fx:id="colDesc" text="Description" prefWidth="300"/>
                <TableColumn fx:id="colAmount" text="Amount" prefWidth="100"/>
                <TableColumn fx:id="colTags" text="Tags" prefWidth="200"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>
