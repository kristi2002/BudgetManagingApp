<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/16"
    fx:controller="it.unicam.cs.mpgc.jbudget120002.controller.ScheduledController">
    
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <!-- Form Section -->
    <GridPane hgap="10" vgap="10">
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="tfDesc" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="tfAmount" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="dpStartDate" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="End Date:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <DatePicker fx:id="dpEndDate" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Recurrence Pattern:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <ComboBox fx:id="cbPattern" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <Label text="Recurrence Value:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="tfRecurrenceValue" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Label text="Tags:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <ComboBox fx:id="cbTags" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        
        <CheckBox fx:id="cbIncome" text="Income" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        
        <FlowPane fx:id="flowSelectedTags" hgap="5" vgap="5" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    </GridPane>

    <!-- Table Section -->
    <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colStartDate" text="Start Date" prefWidth="100"/>
            <TableColumn fx:id="colEndDate" text="End Date" prefWidth="100"/>
            <TableColumn fx:id="colDesc" text="Description" prefWidth="200"/>
            <TableColumn fx:id="colAmount" text="Amount" prefWidth="100"/>
            <TableColumn fx:id="colTags" text="Tags" prefWidth="150"/>
            <TableColumn fx:id="colPattern" text="Pattern" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
